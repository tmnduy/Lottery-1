<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:letterSpacing="0.1"
            android:shadowColor="#424242"
            android:shadowDx="-20"
            android:shadowDy="-5"
            android:shadowRadius="5"
            android:text="@string/label"
            android:textAlignment="center"
            android:textColor="#2714A6"
            android:textSize="150px"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/boder_radius"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/TvProvince1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Xổ số tỉnh ABC"
        android:textColor="#1903a6"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TVThu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="10px"
            android:text="Thứ..."
            android:textColor="#000" />
        <TextView
            android:id="@+id/TVNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="10px"
            android:text="Thứ..."
            android:textColor="#000" />

        <TextView
            android:id="@+id/TvCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text="Code"
            android:textColor="#000"
            android:paddingRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Giải Đặc Biệt"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/TVGiaiDB_MT_MN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000000"
            android:textColor="#ac41f2"
            android:fontFamily="sans-serif-black"
            android:textSize="50dp"
            android:gravity="center"
            android:background="@drawable/boder"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Giải Nhất"
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/TVGiai1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="000000"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:textSize="40dp"
            android:gravity="center"
            android:background="@drawable/boder"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Giải Nhì"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/TVGiai2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000000"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/boder"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boder">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Giải Ba"
                android:textColor="#000"
                android:textSize="25dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RcGiai3"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/boder"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Giải Tư"
            android:textColor="#000"
            android:textSize="25dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RcGiai4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/boder">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Giải Năm"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TVGiai5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000000"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/boder"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Giải Sáu"
            android:textColor="#000"
            android:textSize="25dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RcGiai6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/boder">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Giải Bảy"
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/TVGiai7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000000"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/boder"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boder"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Giải Tám"
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/TVGiai8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="#FF4500"
            android:fontFamily="sans-serif-black"
            android:textSize="60dp"
            android:gravity="center"
            android:background="@drawable/boder"/>
    </LinearLayout>


    </LinearLayout>
    </ScrollView>

</LinearLayout>